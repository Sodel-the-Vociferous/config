<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Emacs Client">
    <action name="Execute"><execute>emacsclient -c</execute></action>
  </item>
  <item label="Terminal">
    <action name="Execute"><execute>xfce4-terminal</execute></action>
  </item>
  <item label="Firefox">
    <action name="Execute"><execute>firefox</execute></action>
  </item>
  <menu id="client-list-menu" />
  <separator />
  <item label="ObConf">
    <action name="Execute"><execute>obconf</execute></action>
  </item>
  <item label="Restart OpenBox">
   <action name="Execute"><execute>openbox --restart</execute></action>
  </item>
  <item label="Exit OpenBox">
    <action name="Execute"><execute>openbox --exit</execute></action>
  </item>
  <separator />
  <item label="Keyboard">
    <action name="Execute"><execute>onboard</execute></action>
  </item>
  <item label="Sleep">
    <action name="Execute"><execute>sudo /etc/acpi/sleep.sh</execute></action>
  </item>
    <item label="Shutdown">
    <action name="Execute"><execute>sudo poweroff</execute></action>
  </item>
</menu>

</openbox_menu>
